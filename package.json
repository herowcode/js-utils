{
  "name": "@herowcode/utils",
  "version": "1.1.8",
  "description": "A lightweight collection of utility functions for everyday JavaScript/TypeScript development",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./array": {
      "types": "./dist/array/index.d.ts",
      "import": "./dist/esm/array/index.js",
      "require": "./dist/cjs/array/index.js"
    },
    "./date": {
      "types": "./dist/date/index.d.ts",
      "import": "./dist/esm/date/index.js",
      "require": "./dist/cjs/date/index.js"
    },
    "./string": {
      "types": "./dist/string/index.d.ts",
      "import": "./dist/esm/string/index.js",
      "require": "./dist/cjs/string/index.js"
    },
    "./files": {
      "types": "./dist/files/index.d.ts",
      "import": "./dist/esm/files/index.js",
      "require": "./dist/cjs/files/index.js"
    },
    "./function": {
      "types": "./dist/function/index.d.ts",
      "import": "./dist/esm/function/index.js",
      "require": "./dist/cjs/function/index.js"
    },
    "./youtube": {
      "types": "./dist/youtube/index.d.ts",
      "import": "./dist/esm/youtube/index.js",
      "require": "./dist/cjs/youtube/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:cjs && yarn build:esm && node scripts/fix-esm-imports.js && yarn build:types && node scripts/postbuild.js",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "lint": "biome check --write --unsafe",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn test:run && yarn build",
    "version:patch": "yarn lint && yarn test:run && yarn build && npm version patch && git push && git push --tags",
    "version:minor": "yarn lint && yarn test:run && yarn build && npm version minor && git push && git push --tags",
    "version:major": "yarn lint && yarn test:run && yarn build && npm version major && git push && git push --tags"
  },
  "keywords": [
    "utils",
    "utilities",
    "date",
    "string",
    "debounce",
    "throttle",
    "typescript",
    "dayjs"
  ],
  "author": {
    "name": "Judson Junior",
    "email": "judson.junior@herowcode.com"
  },
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.10",
    "react": "19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "jest-environment-jsdom": "30.1.2",
    "jsdom": "26.1.0",
    "react-dom": "19.1.1",
    "typescript": "^5.2.2",
    "vitest": "3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herowcode/js-utils.git"
  },
  "bugs": {
    "url": "https://github.com/herowcode/js-utils/issues"
  },
  "homepage": "https://github.com/herowcode/js-utils#readme"
}
