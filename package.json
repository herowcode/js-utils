{
  "name": "@herowcode/utils",
  "version": "1.0.1",
  "description": "A lightweight collection of utility functions for everyday JavaScript/TypeScript development",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./array": {
      "types": "./dist/array/index.d.ts",
      "import": "./dist/array/index.esm.js",
      "require": "./dist/array/index.js"
    },
    "./date": {
      "types": "./dist/date/index.d.ts",
      "import": "./dist/date/index.esm.js",
      "require": "./dist/date/index.js"
    },
    "./string": {
      "types": "./dist/string/index.d.ts",
      "import": "./dist/string/index.esm.js",
      "require": "./dist/string/index.js"
    },
    "./number": {
      "types": "./dist/number.d.ts",
      "import": "./dist/number.esm.js",
      "require": "./dist/number.js"
    },
    "./function": {
      "types": "./dist/function.d.ts",
      "import": "./dist/function.esm.js",
      "require": "./dist/function.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json && node scripts/build-esm.js",
    "build:types": "tsc --project tsconfig.types.json",
    "lint": "biome check --write --unsafe",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn build",
    "version:patch": "yarn test && yarn build && npm version patch && git push && git push --tags",
    "version:minor": "yarn test && yarn build && npm version minor && git push && git push --tags",
    "version:major": "yarn test && yarn build && npm version major && git push && git push --tags"
  },
  "keywords": [
    "utils",
    "utilities",
    "date",
    "string",
    "debounce",
    "throttle",
    "typescript",
    "dayjs"
  ],
  "author": {
    "name": "Judson Junior",
    "email": "judson.junior@herowcode.com"
  },
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/herowcode/js-utils.git"
  },
  "bugs": {
    "url": "https://github.com/herowcode/js-utils/issues"
  },
  "homepage": "https://github.com/herowcode/js-utils#readme"
}
